<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="classicalMusicBean"
          class="com.razin.vadim.ClassicalMusic">
    </bean>
    <bean id="rockMusicBean"
          class="com.razin.vadim.RockMusic">
    </bean>
    <bean id="rapMusicBean"
          class="com.razin.vadim.RapMusic">
    </bean>

    <bean id="musicPlayer" class="com.razin.vadim.MusicPlayer" scope="prototype">
        <property name="musicList">
                <list>
                    <ref bean="classicalMusicBean"/>
                    <ref bean="rockMusicBean"/>
                    <ref bean="rapMusicBean"/>
                </list>
        </property>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>